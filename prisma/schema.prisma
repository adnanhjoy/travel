generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  role     String    @default("customer")
  bookings Booking[]
}

model Airport {
  id            String        @id @default(uuid())
  countryName   String
  countryCode   String
  airportName   String
  airportCode   String
  city_location String        @default("Unknown")
  format        String
  packages      Package[]
  TourPackage   TourPackage[]
}

model Package {
  id            String    @id @default(uuid())
  title         String
  price         Float
  description   String
  destination   Airport   @relation(fields: [destinationId], references: [id])
  destinationId String
  bookings      Booking[]
}

model TourPackage {
  id                   String  @id @default(uuid())
  name                 String
  tour_location        Airport @relation(fields: [locationId], references: [id])
  locationId           String
  featured_picture     String
  duration             Float
  minimum_availability String
  maximum_availability String
  starting_price       Int
  region               String
  currency             String
}

model Booking {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  package   Package  @relation(fields: [packageId], references: [id])
  packageId String
  date      DateTime @default(now())
}
